    "jest": "^29.7.0",
    "serverless": "^3.40.0",
    "serverless-offline": "^13.4.0",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.598.0",
    "@aws-sdk/client-sns": "^3.913.0",
    "@aws-sdk/client-sqs": "^3.913.0",
    "@aws-sdk/lib-dynamodb": "^3.913.0",
    "uuid": "^9.0.1"
  }
